    <body class="app">
    <div id="app-container" class="container-fluid">
        <div id="app-title" class="row justify-content-center">
            <!-- Damnation -->
            <div class="col-md-auto d-flex justify-content-center">
                <p class="h1">СИСТЕМА БРОНИРОВАНИЯ</p>
            </div>
        </div>
        <div id="app-info" class="row justify-content-center">
            <div class="col-md-auto">
                <div class="box red"> - забронирован</div>
            </div>
            <div class="col-md-auto">
