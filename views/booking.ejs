                </tr>
            </thead>
            <tbody id="booking-table-body">
                <!-- {TABLE CONTENT} -->
            </tbody>
            </table>
            </div>
            <div id="table-button-group" class="col-md-auto">
                <button type="button" onclick="booking.Book()" class="btn btn-success">Забронировать</button>
            </div>
            </div>
